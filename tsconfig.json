{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "servers/all/api/*"
      ],
      "schemas": [
        "servers/all/schemas"
      ]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  }
}
